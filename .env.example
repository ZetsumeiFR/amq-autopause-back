# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Server
PORT=3000

# Better Auth
BETTER_AUTH_SECRET=your_secret_key
BETTER_AUTH_URL=http://localhost:3000

# Twitch OAuth (from Twitch Developer Console)
TWITCH_CLIENT_ID=your_client_id
TWITCH_CLIENT_SECRET=your_client_secret

# Twitch EventSub Configuration
# Secret for webhook signature verification (generate a random string, 10-100 chars)
TWITCH_EVENTSUB_SECRET=your_random_secret_string

# Public HTTPS URL where Twitch will send webhooks
# For local development, use ngrok or similar: ngrok http 3000
WEBHOOK_CALLBACK_URL=https://your-domain.com/webhook/twitch

# Optional: Sync subscriptions with Twitch on startup
SYNC_ON_STARTUP=false
