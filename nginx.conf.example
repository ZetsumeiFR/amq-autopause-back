# Example Nginx configuration for AMQ Autopause API
# Place this in /etc/nginx/sites-available/ and symlink to sites-enabled

server {
    listen 80;
    server_name api.amqautopause.zetsumei.xyz;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name api.amqautopause.zetsumei.xyz;

    # SSL Configuration (adjust paths for your certificate)
    ssl_certificate /etc/letsencrypt/live/api.amqautopause.zetsumei.xyz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.amqautopause.zetsumei.xyz/privkey.pem;

    # Modern SSL settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256;

    # Proxy settings
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # SSE support (Server-Sent Events)
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }

    # Webhook endpoint needs special handling for raw body
    location /webhook/twitch {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Important: Don't buffer the request body
        proxy_request_buffering off;
    }
}
